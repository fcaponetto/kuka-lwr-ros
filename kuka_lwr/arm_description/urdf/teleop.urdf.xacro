<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="teleop">

<!-- 
  ROS urdf definition of the TELEOP robot by Istituto Italiano di Tecnologia
  
  DO NOT INCLUDE THIS FILE DIRECTLY! USE teleop_robot.urdf.xacro INSTEAD!

  Author: Enrico Mingo

  Inertial matrix has to be in CoM frame (URDF specs)
-->

<!-- ************ MODEL CONFIGURATION ************ -->
<xacro:include filename="$(find arm_description)/urdf/teleop_config.urdf.xacro" />

<!-- ************ TELEOP BASE ************** -->
<xacro:include filename="$(find arm_description)/urdf/teleop_base.urdf.xacro"/>

<xacro:if value="${TELEOP_FLOATING_BASE}" >
	<link name="world"/>

  	<joint name="world_joint" type="floating">
    		<parent link="world"/>
    		<child link="base_link"/>
		<origin xyz="0 0 0" rpy="0 0 0" />
	</joint>
</xacro:if>

<xacro:if value="${TELEOP_FIXED_BASE}" >
  	<link name="world"/>
  
   	<joint name="world_joint" type="fixed">
    		<parent link="world"/>
    		<child link="base_link"/>
  	</joint>
        <origin xyz="0 0 0.05" rpy="0 0 0" />
</xacro:if>

<link name="TCP"/>
<joint name="TCP_joint" type="fixed">
	<parent link="_teleop_link5"/>
	<child link="TCP"/>
	<origin xyz="0 0 ${270.*mmTom}" rpy="0 0 0" />
</joint>

  
</robot>
